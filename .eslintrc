{
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },

  "plugins": [
    "react",
    "meteor"
  ],

  "extends": [
    "airbnb",
    "plugin:meteor/recommended"
  ],

  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    }
  },

  "rules": {
    "comma-dangle": [2, "always-multiline"],
    "object-curly-spacing": [0, "always"],
    "func-names": 0,
    "no-param-reassign": ["error", { "props": false }]
  }
}
